<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ErrorTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="HintTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <style name="HintTextAppearancee" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <style name="MyChipTextAppearanceList" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:textColor">@color/dim_grey</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ScoreButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:background">@drawable/item_border</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:textColor">#696969</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="ScoreButtonStyleGray">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:background">@drawable/item_border_gray</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:textColor">#696969</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>
    <!-- Button Style for No Ball Options -->
    <style name="NoBallButtonStyle">
        <item name="android:background">@drawable/green_button_border</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">40dp</item>
        <!--        //<item name="android:margin">4dp</item>-->
    </style>

    <style name="OutButtonStyle">
        <item name="android:background">@drawable/green_button_border</item>
        <item name="android:layout_width">@dimen/_60sdp</item>
        <item name="android:layout_height">40dp</item>
        <!--        //<item name="android:margin">4dp</item>-->
    </style>

    <style name="LegByeButtonStyle">
        <item name="android:background">@drawable/green_button_border</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">40dp</item>
        <!-- <item name="android:margin">8dp</item>-->
    </style>

    <style name="BallIndicatorStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/circle_background</item>
        <item name="android:layout_margin">8dp</item>
    </style>
        <style name="CustomTabTextStyle" parent="TextAppearance.Design.Tab">
            <item name="android:fontFamily">@font/opensans_semibold</item>
            <item name="android:textSize">@dimen/_10sdp</item>
            <item name="android:textColor">@color/dark_grey</item>
        </style>


</resources>