<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Red Circle with Semi Transparency -->
    <item>
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <solid android:color="#90F00000"/> <!-- Semi-transparent red -->
        </shape>
    </item>

    <!-- White Checkmark in the center -->
    <item
        android:drawable="@drawable/white_check"
    android:left="10dp"
    android:right="10dp"
    android:top="10dp"
    android:bottom="10dp"/>
</layer-list>
