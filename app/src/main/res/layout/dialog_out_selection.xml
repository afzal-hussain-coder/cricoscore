<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvLegByeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:layout_margin="@dimen/_10sdp"
        android:text="Whom do you want to change?"
        android:visibility="visible"
        android:textColor="@color/light_red"
        android:textSize="@dimen/_12sdp"
       android:fontFamily="@font/opensans_semibold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcvStrike"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="8dp"
            app:strokeColor="@color/dark_grey"
            app:strokeWidth="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgStrike"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:src="@drawable/profile_avtar"></ImageView>

                <TextView
                    android:id="@+id/tvStrikeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="Afzal Hussain"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="Strike"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textColor="@color/dim_grey"
                    android:textSize="@dimen/_9sdp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcvNonStrike"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="8dp"
            app:strokeColor="@color/dark_grey"
            app:strokeWidth="2dp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgNonStrike"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:src="@drawable/profile_avtar"></ImageView>

                <TextView
                    android:id="@+id/tvNonStrikeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/opensans_semibold"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Pooja"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="Non-Strike"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textColor="@color/dim_grey"
                    android:textSize="@dimen/_9sdp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <EditText
        android:id="@+id/etLegByeCustomRuns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:inputType="number"
        android:hint="Enter Runs"
        android:visibility="gone"/>

    <!-- OK and Cancel buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:weightSum="2"
        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/light_sky"
            android:visibility="visible"
            android:text="CANCEL" />

        <Button
            android:id="@+id/btnOK"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/dark_selection"
            android:text="OK"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>
