            <!--Ball-->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp">
                <LinearLayout
                    android:id="@+id/ballIndicators"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_5sdp" />
            </HorizontalScrollView>


        </LinearLayout>
    </FrameLayout>


    <!-- Scoring Buttons -->

        <LinearLayout
            android:id="@+id/liButtom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <GridLayout
                android:id="@+id/scoringGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:rowCount="3"
                android:background="@color/white">

                <!-- Buttons -->
                <Button
                    android:text="0"
                    android:backgroundTint="@null"
                    style="@style/ScoreButtonStyle"/>
                <Button
                    android:text="1"
                    android:backgroundTint="@null"
                    style="@style/ScoreButtonStyle"/>
                <Button
                    android:text="2"
                    android:backgroundTint="@null"
                    style="@style/ScoreButtonStyle"/>
                <Button
                    android:id="@+id/undoButton"
                    android:text="UNDO"
                    android:backgroundTint="@null"
                    android:textColor="#4CAF50"
                    style="@style/ScoreButtonStyleGray"/>

                <Button
                    android:text="3"
                    android:backgroundTint="@null"
                    style="@style/ScoreButtonStyle"/>
                <Button
                    android:text="4\nFOUR"
                    android:backgroundTint="@null"
                    style="@style/ScoreButtonStyle"/>
                <Button
                    android:text="6\nSIX"
                    android:backgroundTint="@null"
                    style="@style/ScoreButtonStyle"/>
                <Button
                    android:id="@+id/btnFiveSeven"
                    android:text="5,7"
                    android:backgroundTint="@null"
                    style="@style/ScoreButtonStyleGray"/>
                <Button
                    android:id="@+id/btnWideBall"
                    android:text="WD"
                    android:backgroundTint="@null"
                    style="@style/ScoreButtonStyle"/>
                <Button
                    android:id="@+id/btnNoBall"
                    android:text="NB"
                    android:backgroundTint="@null"
                    style="@style/ScoreButtonStyle"/>
                <Button
                    android:id="@+id/btnLegBye"
                    android:text="LB"
                    android:backgroundTint="@null"
                    style="@style/ScoreButtonStyle"/>
                <Button
                    android:id="@+id/btnBye"
                    android:text="BYE"
                    android:backgroundTint="@null"
                    style="@style/ScoreButtonStyleGray"/>

            </GridLayout>
            <Button
                android:id="@+id/btOut"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/scoringGrid"
                android:text="OUT"
                android:backgroundTint="@null"
                android:textSize="18dp"
                android:background="@drawable/item_border_gray"
                android:textColor="#800000"/>
        </LinearLayout>


</RelativeLayout>