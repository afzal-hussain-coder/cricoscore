<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:id="@+id/noBallTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Change Striker?"
        android:textColor="@color/purple_700"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_14sdp"
        android:fontFamily="@font/opensans_semibold"
        android:paddingBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="Tell the players what happend \nin the last ball."
        android:textColor="@color/purple_700"
        android:textSize="@dimen/_10sdp"
        android:fontFamily="@font/opensans_semibold"
        android:paddingBottom="8dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cbDeclared"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Declared Run"/>


        <CheckBox
            android:id="@+id/cbShort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Short Run"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:weightSum="2">

        <TextView
            android:id="@+id/tvNotNow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/light_sky"
            android:gravity="center"
            android:text="Not Now"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tvYesSure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/purple_700"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="YES SURE"
            android:layout_weight="1"/>
    </LinearLayout>



</LinearLayout>
