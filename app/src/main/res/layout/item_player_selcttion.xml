<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_2sdp"
    android:layout_marginBottom="@dimen/_2sdp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_2sdp"
    app:cardUseCompatPadding="true"
    tools:ignore="NamespaceTypo">


    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp">


        <RelativeLayout
            android:id="@+id/rl_profile"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerVertical="true">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:src="@drawable/placeholder_user"
                app:civ_border_width="@dimen/_4sdp"
                tools:ignore="ImageContrastCheck" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toLeftOf="@+id/cb"
            android:layout_toRightOf="@+id/rl_profile"
            android:orientation="vertical">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvtLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@drawable/call_black_18dp"
                    android:drawablePadding="@dimen/_2sdp"
                    android:text="8799736451"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8sdp"
                    app:fontFamily="@font/opensans_regular" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Assigned role:-"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_8sdp"
                        app:fontFamily="@font/opensans_regular" />

                    <TextView
                        android:id="@+id/tvtRole"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:text="Captain"
                        android:textColor="@color/purple_700"
                        android:textSize="@dimen/_8sdp"
                        app:fontFamily="@font/opensans_regular" />

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvPlayerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_2sdp"
            android:paddingStart="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:text="Player Name (Bowler)"
            android:layout_toLeftOf="@+id/cb"
            android:layout_toRightOf="@+id/rl_profile"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            app:fontFamily="@font/opensans_semibold" />

        <CheckBox
            android:id="@+id/cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:enabled="false"
            android:layout_centerVertical="true"
            android:visibility="gone">

        </CheckBox>


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>

