<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_2sdp"
    android:layout_marginBottom="@dimen/_2sdp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_20sdp"
    app:cardElevation="@dimen/_2sdp"
    app:cardUseCompatPadding="true"
    tools:ignore="NamespaceTypo">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/rl_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/fl_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/creamewhite"
                    android:padding="@dimen/_18sdp">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:id="@+id/li_teamOne"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <RelativeLayout
                            android:id="@+id/rl_profile"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="center_horizontal">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/img_first_team_logo"
                                android:layout_width="@dimen/_45sdp"
                                android:layout_height="@dimen/_45sdp"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center_horizontal"
                                android:padding="@dimen/_4sdp"
                                android:src="@drawable/placeholder_user" />

                            <RelativeLayout
                                android:id="@+id/iv_verified"
                                android:layout_width="@dimen/_12sdp"
                                android:layout_height="@dimen/_12sdp"
                                android:layout_alignParentRight="true"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_3sdp"
                                android:background="@drawable/circle_camera"
                                android:visibility="visible">

                                <TextView
                                    android:id="@+id/tvPlayerFirstCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:gravity="center_vertical"
                                    android:text="0"
                                    android:textColor="@color/purple_700"
                                    android:textSize="@dimen/_6sdp"
                                    app:fontFamily="@font/opensans_semibold" />
                            </RelativeLayout>
                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvTeamName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Team Name 1"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_8sdp"
                                app:fontFamily="@font/opensans_semibold" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/mb_add_player_first"
                                style="@style/Widget.MaterialComponents.Button"
                                android:layout_width="@dimen/_52sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:visibility="gone"
                                android:layout_gravity="center_horizontal"
                                android:backgroundTint="@color/purple_500"
                                android:drawableLeft="@drawable/add_black_24dp"
                                android:drawableRight="@drawable/player_icon_small"
                                android:drawableTint="@color/white"
                                app:cornerRadius="@dimen/_50sdp" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_gravity="center"
                            android:background="@drawable/circle_camera"
                            android:backgroundTint="@color/smokewhite"
                            android:fontFamily="@font/opensans_bold"
                            android:gravity="center"
                            android:text="vs"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp">

                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/li_teamTwo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <RelativeLayout
                            android:id="@+id/rl_profile2"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="center_horizontal">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/img_teamTwo_logo"
                                android:layout_width="@dimen/_45sdp"
                                android:layout_height="@dimen/_45sdp"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center_horizontal"
                                android:padding="@dimen/_4sdp"
                                android:src="@drawable/placeholder_user" />

                            <RelativeLayout
                                android:layout_width="@dimen/_12sdp"
                                android:layout_height="@dimen/_12sdp"
                                android:layout_alignParentRight="true"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_3sdp"
                                android:background="@drawable/circle_camera"
                                android:visibility="visible">

                                <TextView
                                    android:id="@+id/tvPlayerSecondCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:gravity="center_vertical"
                                    android:text="0"
                                    android:textColor="@color/purple_700"
                                    android:textSize="@dimen/_6sdp"
                                    app:fontFamily="@font/opensans_semibold" />
                            </RelativeLayout>
                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvTName_teamTwo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Team Name 2"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_8sdp"
                                app:fontFamily="@font/opensans_semibold" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/mb_add_player2"
                                style="@style/Widget.MaterialComponents.Button"
                                android:layout_width="@dimen/_52sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:visibility="gone"
                                android:layout_gravity="center_horizontal"
                                android:backgroundTint="@color/purple_500"
                                android:drawableLeft="@drawable/add_black_24dp"
                                android:drawableRight="@drawable/player_icon_small"
                                android:drawableTint="@color/white"
                                app:cornerRadius="@dimen/_50sdp" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>


            </FrameLayout>

            <RelativeLayout
                android:id="@+id/middle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fl_top"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:text="Tournament Name"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    app:fontFamily="@font/opensans_semibold" />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/litLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/middle"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvWinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:visibility="visible"
                    android:textColor="@color/dim_sky"
                    android:fontFamily="@font/opensans_semibold">

                </TextView>

                <TextView
                    android:id="@+id/tvtLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/middle"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:drawableLeft="@drawable/location_black_24dp"
                    android:drawablePadding="@dimen/_3sdp"
                    android:gravity="center_vertical"
                    android:text="Bindra Stadium I.S, Sukhna Path, Sector 63, Sahibzada Ajit Singh Nagar, Chandigarh, Punjab 160062"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8sdp"
                    app:fontFamily="@font/opensans_regular" />
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rl_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/litLocation">

                <TextView
                    android:id="@+id/tvdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:drawableLeft="@drawable/event_black_24dp"
                    android:drawablePadding="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:text="30-Mar-23 to 31-Sep-23"
                    android:textColor="@color/dim_grey"
                    android:textSize="@dimen/_9sdp"
                    app:fontFamily="@font/opensans_semibold" />

                <TextView
                    android:id="@+id/tvLiveStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:visibility="gone"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:text="Live"
                    android:background="@drawable/button_bg_top"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    app:fontFamily="@font/opensans_semibold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/mb_select_playing_xi"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:backgroundTint="@color/purple_500"
                    android:fontFamily="@font/opensans_bold"
                    android:text="@string/select_final_eleven"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8sdp"
                    app:cornerRadius="@dimen/_50sdp" />


            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_player_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_top"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/dim_grey"></View>

            <RelativeLayout
                android:id="@+id/rl_select_player"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_select_player_from_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:drawableRight="@drawable/player_icon"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableTint="@color/green"
                    android:fontFamily="@font/opensans_semibold"
                    android:gravity="center_vertical"
                    android:text="@string/select_player_from_list"
                    android:textColor="@color/green"
                    android:textSize="@dimen/_10sdp">

                </TextView>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_select_player"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_team_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_date"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:visibility="visible">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_toLeftOf="@+id/rl_team_logo"
                            android:orientation="vertical">


                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/OutlinedRoundBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Player Name"
                                android:textColorHint="@color/dark_grey"
                                app:boxBackgroundColor="@color/white"
                                app:boxStrokeColor="@color/purple_500"
                                app:hintTextColor="@color/purple_500"
                                app:startIconDrawable="@drawable/player_icon"
                                app:startIconTint="@null">

                                <!--this is the actual edit text which takes the input-->
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edit_text_pName"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_30sdp"
                                    android:fontFamily="@font/opensans_regular"
                                    android:imeOptions="actionNext"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:paddingTop="@dimen/_5sdp"
                                    android:paddingBottom="@dimen/_5sdp"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_10sdp"
                                    tools:ignore="TouchTargetSizeCheck" />

                            </com.google.android.material.textfield.TextInputLayout>


                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/OutlinedRoundBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:hint="Player Mobile Number"
                                android:textColorHint="@color/dark_grey"
                                app:boxBackgroundColor="@color/white"
                                app:boxStrokeColor="@color/purple_500"
                                app:hintTextColor="@color/purple_500"
                                app:startIconDrawable="@drawable/phone_android_black_24dp"
                                app:startIconTint="@null">

                                <!--this is the actual edit text which takes the input-->
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edit_text_pMobile"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_30sdp"
                                    android:fontFamily="@font/opensans_regular"
                                    android:imeOptions="actionNext"
                                    android:inputType="phone"
                                    android:maxLines="1"
                                    android:paddingTop="@dimen/_5sdp"
                                    android:paddingBottom="@dimen/_5sdp"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_10sdp"
                                    tools:ignore="TouchTargetSizeCheck" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/rl_team_logo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="@dimen/_5sdp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/iv_team_logo"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_60sdp"
                                android:src="@drawable/placeholder_user"
                                tools:ignore="ImageContrastCheck" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="-20dp"
                                android:layout_toEndOf="@+id/iv_team_logo"
                                android:background="@drawable/circle_camera"
                                android:backgroundTint="@color/light_gray"
                                android:padding="@dimen/_4sdp">

                                <ImageView
                                    android:layout_width="@dimen/_18sdp"
                                    android:layout_height="@dimen/_18sdp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_add_a_photo_black_24dp" />
                            </LinearLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <!--state-->
                    <com.cricoscore.Utils.SelectTournamentType
                        android:id="@+id/drop_pType"
                        style="@style/formDropDown"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@drawable/editboxx"
                        android:drawableEnd="@drawable/ic_keyboard_arrow_down_black_24dp"
                        android:fontFamily="@font/opensans_regular"
                        android:hint="Select Player Type"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/dark_grey"
                        android:textSize="@dimen/_10sdp" />
                    <!--city-->
                    <com.cricoscore.Utils.SelectTournamentType
                        android:id="@+id/drop_pRole"
                        style="@style/formDropDown"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@drawable/editboxx"
                        android:drawableEnd="@drawable/ic_keyboard_arrow_down_black_24dp"
                        android:fontFamily="@font/opensans_regular"
                        android:hint="Select Player Role"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/dark_grey"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
